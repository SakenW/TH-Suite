# TH-Suite 环境变量配置示例
# 复制此文件为 .env 并修改相应值
# 基于新的统一配置系统

# =============================================================================
# 基础配置
# =============================================================================

THSUITE_ENVIRONMENT=development
THSUITE_DEBUG=true
THSUITE_VERSION=1.0.0

# =============================================================================
# 目录配置
# =============================================================================

THSUITE_DATA_DIR=~/.th-suite/data
THSUITE_LOG_DIR=~/.th-suite/logs  
THSUITE_CACHE_DIR=~/.th-suite/cache
THSUITE_CONFIG_DIR=~/.th-suite/config
THSUITE_TEMP_DIR=~/.th-suite/temp

# =============================================================================
# 数据库配置
# =============================================================================

THSUITE_DATABASE_PATH=~/.th-suite/data/th-suite.db
THSUITE_DATABASE_ENCRYPTION_KEY=your-encryption-key-here
THSUITE_DATABASE_TIMEOUT=30
THSUITE_DATABASE_MAX_CONNECTIONS=10
THSUITE_DATABASE_ENABLE_WAL=true

# =============================================================================
# 服务器配置（可选）
# =============================================================================

# Trans-Hub服务器集成
THSUITE_SERVER_BASE_URL=https://trans-hub.example.com
THSUITE_SERVER_API_KEY=your-api-key
THSUITE_SERVER_USERNAME=your-username
THSUITE_SERVER_PASSWORD=your-password
THSUITE_SERVER_TIMEOUT=30
THSUITE_SERVER_MAX_RETRIES=3
THSUITE_SERVER_VERIFY_SSL=true

# =============================================================================
# 日志配置
# =============================================================================

THSUITE_LOGGING_LEVEL=INFO
THSUITE_LOGGING_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
THSUITE_LOGGING_ROTATION_SIZE=10MB
THSUITE_LOGGING_RETENTION_DAYS=30
THSUITE_LOGGING_ENABLE_CONSOLE=true
THSUITE_LOGGING_ENABLE_FILE=true

# =============================================================================
# 缓存配置
# =============================================================================

THSUITE_CACHE_ENABLED=true
THSUITE_CACHE_DEFAULT_TTL=3600
THSUITE_CACHE_MAX_SIZE=1000
THSUITE_CACHE_CLEANUP_INTERVAL=300

# =============================================================================
# 任务配置
# =============================================================================

THSUITE_TASKS_MAX_CONCURRENT_TASKS=3
THSUITE_TASKS_DEFAULT_TIMEOUT=600
THSUITE_TASKS_RETRY_ATTEMPTS=3
THSUITE_TASKS_RETRY_DELAY=5
THSUITE_TASKS_CLEANUP_COMPLETED_AFTER=86400

# =============================================================================
# 扫描配置
# =============================================================================

THSUITE_SCAN_MAX_FILE_SIZE=104857600  # 100MB
THSUITE_SCAN_SUPPORTED_ENCODINGS=utf-8,gbk,gb2312,latin-1
THSUITE_SCAN_IGNORE_PATTERNS=*.tmp,*.bak,*.log,node_modules/**,.git/**,__pycache__/**
THSUITE_SCAN_DEEP_SCAN_ENABLED=true
THSUITE_SCAN_PARALLEL_SCAN=true
THSUITE_SCAN_MAX_PARALLEL_WORKERS=4

# =============================================================================
# 安全配置
# =============================================================================

THSUITE_SECURITY_ENCRYPTION_ALGORITHM=AES-256-GCM
THSUITE_SECURITY_KEY_DERIVATION=PBKDF2
THSUITE_SECURITY_SALT_LENGTH=32
THSUITE_SECURITY_ITERATION_COUNT=100000
THSUITE_SECURITY_SESSION_TIMEOUT=7200
THSUITE_SECURITY_MAX_LOGIN_ATTEMPTS=5
THSUITE_SECURITY_LOCKOUT_DURATION=900

# =============================================================================
# MC L10n 应用配置
# =============================================================================

MC_L10N_SERVER_HOST=127.0.0.1
MC_L10N_SERVER_PORT=8000
MC_L10N_MAX_MOD_FILE_SIZE=524288000  # 500MB
MC_L10N_MINECRAFT_VERSIONS=1.20.1,1.19.4,1.18.2
MC_L10N_SUPPORTED_LOADERS=forge,fabric,quilt,neoforge

# =============================================================================
# RW L10n 应用配置  
# =============================================================================

RW_L10N_SERVER_HOST=127.0.0.1
RW_L10N_SERVER_PORT=8002
